{
  "name": "Incognito Please!",
  "description": "Open current tab in Incognito mode.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open this tab in incognito",
    "default_icon": {
      "16": "/assets/icons/16x16.png",
      "32": "/assets/icons/32x32.png",
      "48": "/assets/icons/48x48.png",
      "128": "/assets/icons/128x128.png"
    }
  },
  "commands": {
    "open-tab-in-incognito": {
      "suggested_key": {
        "default": "Alt+I"
      },
      "description": "Open current tab in incognito"
    }
  },
  "icons": {
    "16": "/assets/icons/16x16.png",
    "32": "/assets/icons/32x32.png",
    "48": "/assets/icons/48x48.png",
    "128": "/assets/icons/128x128.png"
  }
}